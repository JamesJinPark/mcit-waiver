<p id="notice"><%= notice %></p>

  <% if user_signed_in? %>
    <h1>Your Assigned Courses</h1>

    <b>Logged in as:</b>
    <%= current_user.email %>

<div class="table-responsive">
    <table class="table table-striped">
      <thead>
      <tr>
        <th>Course</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <% @courses.each do |course| %>
        <% if current_user.id == course.user_id %>
        <tr>
          <td><%= course.name %></td>
          <td><%= link_to 'Show', course %></td>
        </tr>
        <% end %>
    <% end %>
    </table>
  </div>

  <% else %>
    <h1>All Courses</h1>

<div class="table-responsive">
    <table class="table table-striped">
      <tr>
        <th>Course</th>
        <th>Instructor</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

    <% @courses.each do |course| %>
        <tr>
          <td><%= course.name %></td>
          <% if (User.find_by_id(course.user_id)).nil? %>
            <td><%= 'No Instructor Assigned' %></td>        
          <% else %>
            <td><%= course.user.email %></td>    
          <% end %>
          <td><%= link_to 'Show', course %></td>
          <td><%= link_to 'Edit', edit_course_path(course) %></td>
          <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </table>
</div>

  <% end %>
</p>
<br />

<br />
<% if user_signed_in? %>
<%= link_to 'Instructor Logout', destroy_user_session_path, method: :delete, class: "btn btn-lg btn-default" %>
<% end %>
<br />

<% if admin_signed_in? %>
<%= link_to 'Add New Course', new_course_path, class: "btn btn-lg btn-default" %>
<%= link_to 'Admin Logout', destroy_admin_session_path, method: :delete, class: "btn btn-lg btn-default" %>
<%= link_to "Administrator Dashboard", admin_path, class: "btn btn-lg btn-default" %>
<%end%>