<h1>Listing Instructors</h1>

<div class="table-responsive">
    <table class="table table-striped">
  <thead>
  <tr>
    <th>Instructor</th>
    <th>Options</th>
    <th></th>
  </tr>
</thead>

<% @users.each do |user| %>
  <tr>
    <td><%= user.email %></td>
  <td><%= link_to "Delete", admin_destroy_user_path(user), method: :delete, data: { confirm: "Are you sure?" } %></td>
  </tr>
  <% end %>
</table>
</div>

<% if user_signed_in? %>
<%= link_to('Instructor Logout', destroy_user_session_path, method: :delete) %>
<% end %>
<br />

<% if admin_signed_in? %>
<%= link_to 'Add New Instructor', new_user_registration_path, class: "btn btn-lg btn-default"  %>
<%= link_to('Admin Logout', destroy_admin_session_path, method: :delete, class: "btn btn-lg btn-default") %>
<%= link_to "Administrator Dashboard", admin_path, class: "btn btn-lg btn-default" %>

<% else %>


<html>
  <head>
    <title>403 Forbidden</title>
  </head>

  <body>
    <h1>Forbidden</h1>
    <br />
      <p>You don't have permission to access /users on this server.</p>
    <br />
  </body>
</html>

<% end %>
