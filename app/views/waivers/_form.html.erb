<div class="container">
  <div class="form-group">

    <%= form_for @waiver, :html => {:multipart => true} do |f| %>
      <div class = "row">
        <div class="col-md-offset-3 col-md-6">
        <% if @waiver.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@waiver.errors.count, "error") %> prohibited this waiver from being saved:</h2>

            <ul>
            <% @waiver.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field form-control">
          <%= f.text_field :first_name, placeholder: "First Name"%>
        </div>
        <div class="field form-control">
          <%= f.text_field :last_name, placeholder: "Last Name" %>
        </div>
        <div class="field form-control">
          <%= f.text_field :email, placeholder: "Email Address" %>
        </div>
        <div class="field">
          <%= f.label :course %><br />
          <%= collection_select(:waiver, :course_id, Course.all, :id, :name) %><br />
        </div> 
        <div class="field form-control">
          <%= f.text_field :replacement_class, placeholder: "Replacement Class"%>
        </div>

        <div class="field">
          <label><b>Taken Replacement Class: </b></label>
          <%= f.select :taken_replacement_class, ['Yes','No'] %><br /> 
        </div>  
        <div class="field form-control">
          <%= f.text_field :course_taken_website, placeholder: "Course Taken Website" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-offset-3 col-md-2">
        <div class="field">
          <b>Syllabus</b> (PDFs only) <br />
          <span class="btn btn-default btn-file btn-block">
            <%= f.file_field :documentation %> Choose File 
          </span>
        </div>
      </div>

      <div class="col-md-2">
        <div class="field">
          <b>Transcript</b> (PDFs only) <br />
          <span class="btn btn-default btn-file btn-block">
            <%= f.file_field :transcript %>
            Choose File
          </span>
        </div> 
      </div> 

      <div class="col-md-2">
        <div class="field">
          <b>Additional</b><br />
            <span class="btn btn-default btn-file btn-block">
              <%= f.file_field :additional_documentation %>
              Choose File
            </span>
        </div>
      </div>
    </div>

      <div class="row">
        <div class="col-md-offset-3 col-md-6">

          <div class="field">
            <%= f.text_area :comments,  placeholder: "Comments", :class => "form-control", :rows => "6"   %>
          </div> 
        </div> 
      </div>

      

  
  <div class="row">
    <div class="col-md-offset-3 col-md-3">
        <div class="actions">
          <%= f.submit "Submit", class: "btn btn-lg btn-default btn-block" %>
        </div>
    </div>

    <div class="col-md-3">
      <% if admin_signed_in?%>
          <div class="actions">
              <%= link_to 'Back', waivers_path, :class => "btn btn-lg btn-default btn-block" %>
          </div>
        <% else %>
          <div class="actions">
              <%= link_to 'Back', root_path, :class => "btn btn-lg btn-default btn-block" %>
          </div>
        <% end %>
    </div>
  </div>
  <% end %>
</div>
